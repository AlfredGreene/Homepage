{% if addToChecklist != '' %}
    <div class="addToChecklist" onclick="addToChecklistFromSearch(this)">
        Add "<b>{{ addToChecklist }}</b>" to checklist
    </div>
{% endif %}

<style type="text/css">
    {% for feed in feeds %}
        .feed{{ feed.id }} {
            border-left-color: #{{ feed.color }};
        }
    {% endfor %}
</style>

{% for item in feedItems %}
    <div class="listItem {{ item.viewed ? 'used ' : 'newItem ' }}{{ item.pinned ? 'pinned ' : '' }}feed{{ item.feedId }}"
         data-url="{{ item.url }}">
        <div class="pin" data-pin-id="{{ item.id }}"></div>
        <p class="listTitle ">{{ item.title|striptags }}</p>
        <p class="listContent">{{ item.description|truncate(120, true) }}</p>
    </div>
{% endfor %}

{% if feedItems|length > 0 and nextPageNumber != 50000 %}
    <a href="/page/{{ nextPageNumber }}" class="listItem jscroll-next">Next page</a>
{% endif %}
