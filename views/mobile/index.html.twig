{% extends "base.html.twig" %}

{% block title %}Homepage for Mobile{% endblock %}

{% block header %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/mobile.css?v=2b">
    <script src='/assets/scripts/mobile.js?v=2'></script>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="apple-touch-icon" href="/iphone-icon.png">
{% endblock %}

{% block body %}
    <div class="topbar">
        <div class="title"><a href="#">Peter van Dam's Homepage</a></div>
        <div class="backButton">&lt; Back</div>
        <div class="mobilePin"></div>
        <div class="navbar"><a href="#" class="pageLinkToUrl" target="_blank"></a></div>
        <div class="shareButton"></div>
    </div>

    <div class="mainContent">
        {% block content %}
        {% endblock %}

        {% include 'home/newsfeed.html.twig' with {'feedItems': feedItems} %}
        <div class="contentContainer">
            <iframe src="" sandbox="allow-scripts allow-same-origin allow-forms allow-popups
        allow-pointer-lock"></iframe>
        </div>
    </div>
{% endblock %}
