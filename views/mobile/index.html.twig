{% extends "base.html.twig" %}

{% block title %}Homepage for Mobile{% endblock %}

{% block header %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="apple-touch-icon" href="/iphone-icon.png">
{% endblock %}

{% block body %}
    <div class="topbar">
        <div class="title noselect"><a href="javascript:requestNewFeedItems();">Peter van Dam's Homepage</a></div>
        <div class="backButton noselect">&lt; Back</div>
        <div class="navbar"><a href="#" class="pageLinkToUrl" target="_blank"></a></div>
        <div class="searchButton searchNotActive"><i class="fa fa-search fa-x4"></i></div>
        <div class="createButton"><i class="fa fa-file-text-o fa-x4"></i></div>
    </div>

    <div class="mainContent">
        {% block content %}
        {% endblock %}

        <div class="noselect listview">
            <div class="list scroll wow slideInLeft">
                {% include 'home/newsfeed.html.twig' with {'feedItems': feedItems, 'addToChecklist': '', 'feeds': feeds} %}
            </div>
        </div>

        <div class="noselect searchview">
            <div class="searchbar">
                <input class="searchBox" name="q" type="text" placeholder="Search items" autocomplete="off" />
            </div>
            <div class="searchResults doNotHide"></div>
        </div>

        <div class="contentContainer">
            <iframe width="414" height="628" src="" sandbox="allow-scripts allow-same-origin allow-forms allow-popups
        allow-pointer-lock"></iframe>
        </div>
    </div>

    {% include 'modals/create.html.twig' %}
{% endblock %}
