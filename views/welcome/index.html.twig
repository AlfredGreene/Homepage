{# @var forecast \Entity\WeatherForecastList #}

{% extends 'base.html.twig' %}

{% block body %}

    {{ forecast.current.type }}
    <link rel="stylesheet" href="/assets/css/weather.css">
    <div class="welcomePage">
        <h1>Welcome!</h1>
        <div id="weatherIcon">

            {% if 'drizzle' == forecast.current.type %}
                <div class="icon sun-shower">
                    <div class="cloud"></div>
                    <div class="sun">
                        {% if "now"|date("H") < 20 and "now"|date("H") > 6 %}<div class="rays"></div>{% endif %}
                    </div>
                    <div class="rain"></div>
                </div>
            {% endif %}

            {% if 'thunderstorm' == forecast.current.type %}
                <div class="icon thunder-storm">
                    <div class="cloud"></div>
                    <div class="lightning">
                        <div class="bolt"></div>
                        <div class="bolt"></div>
                    </div>
                </div>
            {% endif %}

            {% if 'rain' == forecast.current.type %}
                <div class="icon rainy">
                    <div class="cloud"></div>
                    <div class="rain"></div>
                </div>
            {% endif %}

            {% if 'snow' == forecast.current.type %}
                <div class="icon flurries">
                    <div class="cloud"></div>
                    <div class="snow">
                        <div class="flake"></div>
                        <div class="flake"></div>
                    </div>
                </div>
            {% endif %}

            {% if 'clear' == forecast.current.type %}
                <div class="icon sunny">
                    <div class="sun">
                        {% if "now"|date("H") < 20 and "now"|date("H") > 6 %}<div class="rays"></div>{% endif %}
                    </div>
                </div>
            {% endif %}

            {% if 'cloud' == forecast.current.type %}
                <div class="icon cloudy">
                    <div class="cloud"></div>
                    <div class="cloud"></div>
                </div>
            {% endif %}
        </div>

        <div class="tempLarge">
            {{ forecast.current.temperature }}&deg;C
        </div>

        <p>The weather currently is {{ forecast.current.type }}, with a tempature of {{ forecast.current.temperature }}&deg;C
            .<br />
        The maximum will be {{ forecast.current.maxTemperature }}&deg;C with a low of: {{ forecast.current.minTemperature }}&deg;
            C</p>

        {% set tomorrow = forecast.upcoming|first %}

        <p>Tomorrow the weather will be: {{ tomorrow.type }}, with a max temperature of: {{ tomorrow.maxTemperature }}&deg;C</p>

    </div>
{% endblock %}
