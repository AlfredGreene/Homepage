{# @var forecast \Entity\WeatherForecastList #}

{% extends 'base.html.twig' %}

{% block header %}
    <link rel="stylesheet" href="/assets/css/weather.css">
{% endblock %}

{% block body %}
    <div class="welcomePage">
        <h1>Welcome!</h1>
        <div id="weatherIcon">

            {% if 'partly_cloud' == forecast.current.type %}
                <div class="icon sun-shower">
                    <div class="cloud"></div>
                    <div class="sun">
                        {% if "now"|date("H") < 20 and "now"|date("H") > 6 %}<div class="rays"></div>{% endif %}
                    </div>
                    <div class="rain"></div>
                </div>
            {% endif %}

            {% if 'thunderstorm' == forecast.current.type %}
                <div class="icon thunder-storm">
                    <div class="cloud"></div>
                    <div class="lightning">
                        <div class="bolt"></div>
                        <div class="bolt"></div>
                    </div>
                </div>
            {% endif %}

            {% if 'rain' == forecast.current.type %}
                <div class="icon rainy">
                    <div class="cloud"></div>
                    <div class="rain"></div>
                </div>
            {% endif %}

            {% if 'snow' == forecast.current.type %}
                <div class="icon flurries">
                    <div class="cloud"></div>
                    <div class="snow">
                        <div class="flake"></div>
                        <div class="flake"></div>
                    </div>
                </div>
            {% endif %}

            {% if 'sun' == forecast.current.type %}
                <div class="icon sunny">
                    <div class="sun">
                        {% if "now"|date("H") < 20 and "now"|date("H") > 6 %}<div class="rays"></div>{% endif %}
                    </div>
                </div>
            {% endif %}

            {% if 'cloud' == forecast.current.type %}
                <div class="icon cloudy">
                    <div class="cloud"></div>
                    <div class="cloud"></div>
                </div>
            {% endif %}
        </div>

        <div class="tempLarge">
            {{ forecast.current.temperature }}&deg;C
        </div>

        <div class="weatherInfo">
            <div class="weatherCurrentCondition">
                {{ forecast.current.type }}
            </div>
            <div class="weatherTodayCast">
                <span class="max">{{ forecast.current.maxTemperature }}&deg;C</span>
                <span class="min">{{ forecast.current.minTemperature }}&deg;C</span>
            </div>
        </div>

        <div class="weekForecast">
            {% for weatherDay in  forecast.upcoming %}
                <div class="weatherDay">
                    <div class="weatherIcon icon_{{ weatherDay.type }}"></div>
                    <div class="weatherDayMax">{{ weatherDay.maxTemperature }}&deg;C</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
