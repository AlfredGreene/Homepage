<h2>RSS Feed preferences</h2>
<div class="form">
    <h1>Add Feed</h1>
    <p>
        <input type="text" name="name" value="" placeholder="Name" /><br />
        <input type="text" name="url" value="" placeholder="Insert RSS feed url" /><br />
        <input type="text" name="icon" value="" placeholder="FontAwesome icon (optional)" /><br />
        <input type="checkbox" name="autoPin" value="on" id="autoPin"/><label for="autoPin">Automaticly pin new items</label><br />
        <input type="text" name="color" value="#000" placeholder="Insert RGB without the #" id="spectrum" /><br />
        <input type="submit" value="Add" class="js-settings-add-feed" />
    </p>
</div>
{% if feeds is not empty %}
    <table>
        <tbody>
        {% for feed in feeds %}
            {% set amount = feed.items|length %}

            <tr data-feed-id="{{ feed.id }}" data-feed-name="{{ feed.name }}">
                <td class="feedColor">
                    <span style="background-color:{{ feed.color }};"></span>
                </td>
                <td class="feedName">
                    {{ feed.name }}
                    <span>{{ feed.feedurl }}</span>
                </td>
                <td class="feedIcon">
                    <input class="js-update-auto-pin" type="checkbox" value="on" {% if feed.autoPin %}checked="checked"{% endif %}/>
                </td>
                <td class="feedIcon">
                    <span class="fa fa-{{ feed.feedIcon }}"></span>
                </td>
                <td class="feedAmount">
                    {{ amount }}
                </td>
                <td class="feedActions">
                    {# <button class="fa fa-edit"></button> #}
                    <button class="js-settings-remove-feed fa fa-trash"></button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Add your first RSS Feed to have it listed here</p>
{% endif %}
